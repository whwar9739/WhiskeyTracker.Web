@page "{id:int}"
@model WhiskeyTracker.Web.Pages.Whiskies.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Whiskey</h1>
<h3 class="text-danger">Are you sure you want to delete this?</h3>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Distillery</dt>
        <dd class="col-sm-10">@Model.Whiskey.Distillery</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Whiskey.Name</dd>
        
        <dt class="col-sm-2">Region</dt>
        <dd class="col-sm-10">@Model.Whiskey.Region</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Whiskey.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>