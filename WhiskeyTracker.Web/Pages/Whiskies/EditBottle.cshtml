@page "{id:int}"
@model WhiskeyTracker.Web.Pages.Whiskies.EditBottleModel
@{
    ViewData["Title"] = "Edit Bottle";
}

<div class="container mt-4">
    <h1>Edit Bottle</h1>
    <h3 class="text-muted">For @Model.WhiskeyName</h3>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="Bottle.Id" />
                <input type="hidden" asp-for="Bottle.WhiskeyId" />

                <div class="row">
                     <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Bottle.CollectionId" class="control-label">Collection</label>
                            <select asp-for="Bottle.CollectionId" class="form-select" asp-items="Model.Collections"></select>
                            <span asp-validation-for="Bottle.CollectionId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Bottle.UserId" class="control-label">Purchased By</label>
                            <select asp-for="Bottle.UserId" class="form-select" asp-items="Model.Purchasers"></select>
                            <span asp-validation-for="Bottle.UserId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Bottle.Status" class="form-label">Current Status</label>
                    <select asp-for="Bottle.Status" class="form-select" asp-items="Html.GetEnumSelectList<WhiskeyTracker.Web.Data.BottleStatus>()"></select>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Bottle.PurchasePrice" class="form-label">Price Paid</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Bottle.PurchasePrice" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Bottle.PurchaseDate" class="form-label">Purchase Date</label>
                        <input asp-for="Bottle.PurchaseDate" type="date" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Bottle.PurchaseLocation" class="form-label">Location</label>
                    <input asp-for="Bottle.PurchaseLocation" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Bottle.BottlingDate" class="form-label">Bottling Date</label>
                    <input asp-for="Bottle.BottlingDate" type="date" class="form-control" />
                </div>

                <div class="mt-4">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                    <a asp-page="./Details" asp-route-id="@Model.Bottle.WhiskeyId" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const collectionSelect = document.getElementById('Bottle_CollectionId');
            const purchaserSelect = document.getElementById('Bottle_UserId');

            collectionSelect.addEventListener('change', function() {
                const collectionId = this.value;
                if (!collectionId) return;

                fetch(`/api/collections/${collectionId}/members`)
                    .then(response => {
                        if (!response.ok) throw new Error('Network response was not ok');
                        return response.json();
                    })
                    .then(users => {
                        // clear current options
                        purchaserSelect.innerHTML = '';
                        
                        // populate new options
                        users.forEach(user => {
                            const option = document.createElement('option');
                            option.value = user.id;
                            option.textContent = user.name;
                            purchaserSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error fetching members:', error));
            });
        });
    </script>
}