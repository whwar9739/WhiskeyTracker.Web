@page "{id:int}"
@model WhiskeyTracker.Web.Pages.Whiskies.AddBottleModel
@{
    ViewData["Title"] = "Add Bottle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Bottle: @Model.WhiskeyName</h4>
                </div>
                <div class="card-body">
                    @if (Model.Collections == null || !Model.Collections.Any())
                    {
                        <div class="alert alert-danger">
                            <h5><i class="bi bi-exclamation-triangle-fill"></i> No Collections Found!</h5>
                            <p>You cannot add a bottle because you don't belong to any collections. Please create a collection first to organize your bottles.</p>
                            <a asp-page="/Collections/Create" class="btn btn-primary">Create a Collection</a>
                        </div>
                    }
                    else
                    {
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="NewBottle.WhiskeyId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NewBottle.PurchaseDate" class="control-label">Purchase Date</label>
                                    <input asp-for="NewBottle.PurchaseDate" class="form-control" type="date" />
                                    <span asp-validation-for="NewBottle.PurchaseDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NewBottle.BottlingDate" class="control-label">Bottling Date (Optional)</label>
                                    <input asp-for="NewBottle.BottlingDate" class="form-control" type="date" />
                                    <span asp-validation-for="NewBottle.BottlingDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NewBottle.PurchasePrice" class="control-label">Price ($)</label>
                                    <input asp-for="NewBottle.PurchasePrice" class="form-control" />
                                    <span asp-validation-for="NewBottle.PurchasePrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NewBottle.PurchaseLocation" class="control-label">Purchase Location</label>
                                    <input asp-for="NewBottle.PurchaseLocation" class="form-control" placeholder="e.g. Local Shop, Gift, etc." />
                                    <span asp-validation-for="NewBottle.PurchaseLocation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                             <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NewBottle.CollectionId" class="control-label">Collection</label>
                                    <select asp-for="NewBottle.CollectionId" class="form-select" asp-items="Model.Collections"></select>
                                    <span asp-validation-for="NewBottle.CollectionId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NewBottle.UserId" class="control-label">Purchased By</label>
                                    <select asp-for="NewBottle.UserId" class="form-select" asp-items="Model.Purchasers"></select>
                                    <span asp-validation-for="NewBottle.UserId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NewBottle.Status" class="control-label">Bottle Status</label>
                            <select asp-for="NewBottle.Status" class="form-select" asp-items="Html.GetEnumSelectList<WhiskeyTracker.Web.Data.BottleStatus>()"></select>
                            <span asp-validation-for="NewBottle.Status" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label asp-for="NewBottle.CapacityMl" class="control-label">Capacity (ml)</label>
                                    <input asp-for="NewBottle.CapacityMl" class="form-control" />
                                    <span asp-validation-for="NewBottle.CapacityMl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label asp-for="NewBottle.CurrentVolumeMl" class="control-label">Current (ml)</label>
                                    <input asp-for="NewBottle.CurrentVolumeMl" class="form-control" />
                                    <span asp-validation-for="NewBottle.CurrentVolumeMl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3 pt-4">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="NewBottle.IsInfinityBottle" />
                                        <label class="form-check-label" asp-for="NewBottle.IsInfinityBottle">
                                            Is this an Infinity Bottle? ♾️
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">Save Bottle</button>
                            <a asp-page="./Details" asp-route-id="@Model.NewBottle.WhiskeyId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const collectionSelect = document.getElementById('NewBottle_CollectionId');
            const purchaserSelect = document.getElementById('NewBottle_UserId');

            collectionSelect.addEventListener('change', function() {
                const collectionId = this.value;
                if (!collectionId) return;

                fetch(`/api/collections/${collectionId}/members`)
                    .then(response => {
                        if (!response.ok) throw new Error('Network response was not ok');
                        return response.json();
                    })
                    .then(users => {
                        // clear current options
                        purchaserSelect.innerHTML = '';
                        
                        // populate new options
                        users.forEach(user => {
                            const option = document.createElement('option');
                            option.value = user.id;
                            option.textContent = user.name;
                            purchaserSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error fetching members:', error));
            });
        });
    </script>
}