@page
@model WhiskeyTracker.Web.Pages.Tasting.IndexModel

@{
    ViewData["Title"] = "My Sessions";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Tasting Sessions</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Start New Session
        </a>
    </div>

    @if (Model.Sessions != null && Model.Sessions.Count > 0)
    {
        <div class="list-group">
            @foreach (var item in Model.Sessions)
            {
                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@item.Title</h5>
                        <small class="text-muted">@item.Date.ToString("MMMM dd, yyyy")</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-secondary rounded-pill me-3">@item.NotesCount drams pledged</span>
                        <a asp-page="./Wizard" asp-route-sessionId="@item.Id" class="btn btn-outline-primary btn-sm">
                            Resume
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <p class="lead text-muted">You haven't started any tasting sessions yet.</p>
            <a asp-page="Create" class="btn btn-primary mt-3">Start your first session</a>
        </div>
    }
</div>
